<tr>
  <td><%= train.number %></td>
  <td><%= train.route.present? ? link_to(train.route.name, route_path(train.route)) : 'Маршрут не назначен' %></td>
  <td><%= link_to 'Посмотреть', train %></td>
  <td><%= link_to 'Редактировать', edit_train_path(train) %></td>
  <td><%= link_to 'Удалить', train, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
</tr>
