<div class="row">
  <h1>Изменение билета</h1>

  <%= form_for(@ticket, html: { class: 'form-horizontal col-sm-6', role: 'form' }) do |f| %>
    <% if @ticket.errors.any? %>
      <div id="error_explanation">
        <h2><%= t('common.errors') %></h2>
        <ul>
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :first_name, class: 'col-sm-3 control-label' %>
      <%= f.text_field :first_name, class: 'col-sm-3 form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: 'col-sm-3 control-label' %>
      <%= f.text_field :last_name, class: 'col-sm-3 form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :second_name, class: 'col-sm-3 control-label' %>
      <%= f.text_field :second_name, class: 'col-sm-3 form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :passport_number, class: 'col-sm-3 control-label' %>
      <%= f.text_field :passport_number, class: 'col-sm-3 form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :start_station, class: 'col-sm-3 control-label' %>
      <%= f.collection_select :start_station_id, RailwayStation.all, :id, :title, {}, class: 'col-sm-3 form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :finish_station, class: 'col-sm-3 control-label' %>
      <%= f.collection_select :finish_station_id, RailwayStation.all, :id, :title, {}, class: 'col-sm-3 form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :train, class: 'col-sm-3 control-label' %>
      <%= f.collection_select :train_id, Train.all, :id, :number, {}, class: 'col-sm-3 form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit t('common.update'), class: 'form-control' %>
    </div>
  <% end %>
</div>
<%= link_to t('common.show'), ticket_path(@ticket), class: 'btn btn-primary' %> |
<%= link_to t('common.back'), tickets_path, class: 'btn btn-primary' %>
