<h1><%= t('.title') %></h1>
<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('common.errors') %></h2>
      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name%>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name%>
  </div>
  <div class="field">
    <%= f.label :second_name %>
    <%= f.text_field :second_name%>
  </div>
  <div class="field">
    <%= f.label :passport_number %>
    <%= f.text_field :passport_number %>
  </div>
  <%= f.hidden_field :start_station_id, value: @start_station.id %>
  <%= f.hidden_field :finish_station_id, value: @finish_station.id %>
  <%= f.hidden_field :train_id, value: @train.id %>
  <div class="actions">
    <%= f.submit t('common.create') %>
  </div>
<% end %>
<%= link_to t('common.back'), search_path %>
