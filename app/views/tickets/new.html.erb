<h1>Новый билет</h1>
<%= form_for([@train, @ticket]) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this route from being saved:</h2>
      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :user, 'Я (покупатель)' %>
    <%= f.collection_select :user_id, User.all, :id, :username %>
  </div>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name%>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name%>
  </div>
  <div class="field">
    <%= f.label :second_name %>
    <%= f.text_field :second_name%>
  </div>
  <div class="field">
    <%= f.label :passport_number %>
    <%= f.text_field :passport_number %>
  </div>
  <%= f.hidden_field :start_station_id, value: @start_station.id %>
  <%= f.hidden_field :finish_station_id, value: @finish_station.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Назад', search_path %>
