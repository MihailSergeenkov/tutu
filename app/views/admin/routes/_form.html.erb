<div class="row">
  <%= form_for([:admin, route], html: { class: 'form-horizontal col-sm-6', role: 'form' }) do |f| %>
    <% if route.errors.any? %>
      <div id="error_explanation">
        <h2><%= t('common.errors') %></h2>
        <ul>
        <% route.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <%= f.text_field :name, readonly: true, class: 'col-sm-3 form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :railway_station_ids, class: 'col-sm-3 control-label' %>
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true, class: 'col-sm-3 form-control' } %>
    </div>

    <div class="form-group">
      <%= f.submit "#{@route.new_record? ? t('common.create') : t('common.update')}", class: 'form-control' %>
    </div>
  <% end %>
</div>
