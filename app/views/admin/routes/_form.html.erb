<%= form_for([:admin, route]) do |f| %>
  <% if route.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('common.errors') %></h2>
      <ul>
      <% route.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, readonly: true %>
  </div>

  <div class="field">
    <%= f.label :railway_station_ids %>
    <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= f.submit "#{@route.new_record? ? t('common.create') : t('common.update')}" %>
  </div>
<% end %>
