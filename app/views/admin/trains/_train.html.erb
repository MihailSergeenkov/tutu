<tr>
  <td>
    <div id="train_number_<%= train.id %>">
      <%= train.number %>
    </div>
    <%= render 'edit_number_form', train: train %>
  </td>
  <td><%= train.route.present? ? link_to(train.route.name, admin_route_path(train.route)) : 'Маршрут не назначен' %></td>
  <td><%= link_to t('common.show'), admin_train_path(train) %></td>
  <td><%= link_to t('common.edit'), '', class: 'edit_train', data: { train_id: train.id } %></td>
  <td><%= link_to t('common.delete'), admin_train_path(train), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
</tr>
